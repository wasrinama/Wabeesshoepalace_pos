{
  "name": "pos-system-backend",
  "version": "1.0.0",
  "description": "Backend for POS System",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:ts": "nodemon --exec ts-node server.ts",
    "prod": "npm run build && npm start",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["pos", "backend", "api"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/mongoose": "^5.11.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/cors": "^2.8.0",
    "@types/morgan": "^1.9.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0"
  }
}
